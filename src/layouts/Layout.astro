---
import Navbar from "../components/navbar.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      http-equiv="Content-Security-Policy"
      content="upgrade-insecure-requests"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <main
      class="mt-10 mx-auto p-6 max-w-prose place-content-center text-cooTimberWolf"
    >
      <slot />
      <div class="light fixed top-0"></div>
    </main>
  </body>
</html>
<style is:global>
  html {
    height: 100%;
    background: rgb(2, 80, 9);
    background-image: url("https://img3.akspic.ru/attachments/crops/8/4/7/4/44748/44748-prirodnyj_zapovednik-hvojnymi_lesami-hvojnye-el_elovyj_les-okruzhayushchaya_sreda-3840x2160.jpg");
    background-attachment: fixed;
    background-size: cover;
  }
</style>
